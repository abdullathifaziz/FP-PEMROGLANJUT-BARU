<Page x:Class="FP_PEMROGLANJUT.View.NominalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FP_PEMROGLANJUT.View"
      mc:Ignorable="d" 
      d:DesignHeight="585" d:DesignWidth="992"
      Title="NominalPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Background="#14279B" Height="50" Width="100" 
             HorizontalAlignment="Left" Margin="155,10,10,10" CornerRadius="10" MouseDown="Border_MouseDown" >
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <Label Content="KEMBALI" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="90" 
                 Foreground="White" Style="{DynamicResource MenuBorder}" HorizontalContentAlignment="Center" 
                 VerticalContentAlignment="Center"/>
            </Border>
        </Grid>

        <Label Content="Nominal" Foreground="White" FontSize="36" HorizontalAlignment="Center" 
         VerticalAlignment="Center" FontWeight="Bold" Height="58" Width="158" VerticalContentAlignment="Center" 
         HorizontalContentAlignment="Center" FontFamily="Righteous">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.1" Direction="315" Color="White"/>
            </Label.Effect>
        </Label>
        
        <Grid Width="700" Height="350" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="0" Grid.Row="0" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal5000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}" 
                 MouseDown="menuNominal5000_MouseDown">
                    <Label x:Name="nominal1" Content="5.000" HorizontalAlignment="Center" VerticalAlignment="Center"
                     Foreground="White" FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="1" Grid.Row="0" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal10000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="10.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="2" Grid.Row="0" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal15000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="15.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="3" Grid.Row="0" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal20000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="20.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" 
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="0" Grid.Row="1" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal35000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="35.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" 
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="1" Grid.Row="1" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal50000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="50.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" 
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="2" Grid.Row="1" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal100000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="100.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>

            <Border Background="#14279B" Margin="10,10,10,10" Grid.Column="3" Grid.Row="1" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="7" Opacity="0.5" Direction="315"/>
                </Border.Effect>
                <DockPanel x:Name="menuNominal150000" Height="145" Width="145" Style="{StaticResource MenuDockPanel}">
                    <Label Content="150.000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"
                     FontFamily="Righteous" FontSize="18"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
